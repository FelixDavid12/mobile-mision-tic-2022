<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_poi_list"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:contentDescription="@string/img_0_info"
            android:scaleType="centerCrop"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@drawable/versailles_0" />

        <LinearLayout
            android:id="@+id/linear_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_poi_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="0dp"
                android:textColor="#2D2C33"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@string/poi_name" />

            <ImageView
                android:id="@+id/icon_star_list"
                android:layout_width="28dp"
                android:layout_height="19dp"
                android:layout_marginTop="17dp"
                android:layout_weight="0"
                android:importantForAccessibility="no"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                app:srcCompat="@drawable/icon_star"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/rating_poi_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingStart="3dp"
                android:paddingEnd="16dp"
                android:textAlignment="textEnd"
                tools:text="@string/poi_value" />
        </LinearLayout>

        <TextView
            android:id="@+id/location_poi_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="5dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:textSize="14sp"
            tools:text="@string/poi_location" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>